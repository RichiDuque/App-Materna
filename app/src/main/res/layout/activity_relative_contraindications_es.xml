<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeContraindicationsActivityEs"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtTitleRelative"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:backgroundTint="#D37AE2"
        android:background="@drawable/custom_title2"
        android:text="FORMULARIO DE CONSULTA DEL PROVEEDOR DE SERVICIOS DE SALUD PARA LA ACTIVIDAD \nFÍSICA PRENATAL"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/titleRelative"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Contraindicaciones Relativas"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtTitleRelative"/>


    <TextView
        android:id="@+id/textRelative"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Las mujeres embarazadas con estas condiciones deben discutir con usted las ventajas y desventajas de la actividad física. Deben continuar con la actividad física, pero modificando los ejercicios para reducir la intensidad y/o la duración."
        android:justificationMode="inter_word"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleRelative"/>

    <CheckBox
        android:id="@+id/checkBoxRelative1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Abortos recurrentes"
        android:layout_below="@id/textRelative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <CheckBox
        android:id="@+id/checkBoxRelative2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Hipertensión gestacional"
        android:layout_below="@id/checkBoxRelative1"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:id="@+id/checkBoxRelative3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Antecedentes de parto prematuro espontáneo"
        android:layout_below="@id/checkBoxRelative2"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxRelative4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Enfermedad cardiovascular o respiratoria leve/moderada"
        android:layout_below="@id/checkBoxRelative3"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxRelative5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Anemia sintomática"
        android:layout_below="@id/checkBoxRelative4"
        android:layout_centerHorizontal="true"/>
    <CheckBox
        android:id="@+id/checkBoxRelative6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Desnutrición"
        android:layout_below="@id/checkBoxRelative5"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxRelative7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Trastorno alimentario"
        android:layout_below="@id/checkBoxRelative6"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxRelative8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Embarazo gemelar después de la semana 28"
        android:layout_below="@id/checkBoxRelative7"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/checkBoxRelative9"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Otras condiciones médicas significativas"
        android:layout_below="@id/checkBoxRelative8"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnRelativeSiguiente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxRelative9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#D37AE2"
        android:text="Siguiente"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnRelativeRegresar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/flecha"
        android:background="@color/white"
        android:layout_toLeftOf="@id/btnRelativeSiguiente"
        android:layout_below="@+id/checkBoxRelative9"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>