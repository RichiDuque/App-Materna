<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioButton3Activity"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtTitleRadio2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:background="@drawable/custom_title"
        android:text="GET ACTIVE
        QUESTIONNAIRE FOR PREGNANCY"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="In previous pregnancies, have you had:"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:elevation="5dp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtTitleRadio2"
        android:background="@drawable/custom_datos"/>

    <TextView
        android:id="@+id/textMensaje"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Please answer YES or NO to each question to the best of your ability"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"/>
    <TextView
        android:id="@+id/textNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="No"
        android:textColor="@color/black"
        android:layout_below="@id/textMensaje"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textYes"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:id="@+id/textYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Yes"
        android:textColor="@color/black"
        android:layout_below="@id/textMensaje"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/text1"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMensaje"
        android:text="a. Recurrent miscarriages (loss of your baby before 20 weeks gestation two or more times)?"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <RadioGroup
        android:id="@+id/grupoN"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textYes"
        android:layout_toEndOf="@id/text1"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <RadioButton
            android:id="@+id/rbtnYesN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <RadioButton
            android:id="@+id/rbtnNoN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp" />
    </RadioGroup>
    <TextView
        android:id="@+id/text2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:text="b. Early delivery (before 37 weeks gestation)?"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>

    <RadioGroup
        android:id="@+id/grupoO"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/grupoN"
        android:layout_toEndOf="@id/text2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <RadioButton
            android:id="@+id/rbtnYesO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <RadioButton
            android:id="@+id/rbtnNoO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp" />
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRadio3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        android:backgroundTint="#E1E2F8"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCard"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Do you have any other medical condition that may affect your ability to be physically active during pregnancy?"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textNoCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="No"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/textYesCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Yes"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/textNoCard"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"/>
            <RadioGroup
                android:id="@+id/grupoCard"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textNoCard"
                android:layout_toEndOf="@id/textCard"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/rbtnYes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />

                <RadioButton
                    android:id="@+id/rbtnNo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp" />
            </RadioGroup>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editRadio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="What is the condition? Specify:"
        android:layout_below="@id/cardRadio3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/btnRadio3Siguiente"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editRadio3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#a97ae2"
        android:text="Next"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btn3Regresar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editRadio3"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/btnRadio3Siguiente"
        android:background="@color/white"
        app:srcCompat="@drawable/flecha" />

</RelativeLayout>